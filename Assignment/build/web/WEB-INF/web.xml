<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>StudentInsertController</servlet-name>
        <servlet-class>controller.StudentInsertController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.accesscontrol.LoginController</servlet-class>
        <init-param>
            <description>url to redirect after successfully logged in.</description>
            <param-name>url</param-name>
            <param-value>dantri.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>RectGenerateController</servlet-name>
        <servlet-class>controller.RectGenerateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RectGenerateView</servlet-name>
        <servlet-class>view.RectGenerateView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.accesscontrol.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductionPlanCreateController</servlet-name>
        <servlet-class>controller.productionplan.ProductionPlanCreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>controller.productionplan.HomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductionPlan</servlet-name>
        <servlet-class>controller.productionplan.ProductionPlan</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductionPlanUpdateController1</servlet-name>
        <servlet-class>controller.productionplan.ProductionPlanUpdateController1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductionDetailPlan</servlet-name>
        <servlet-class>controller.productionplan.ProductionDetailPlan</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RectGenerateController</servlet-name>
        <url-pattern>/rect/gen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RectGenerateView</servlet-name>
        <url-pattern>/view/rect/gen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductionPlanCreateController</servlet-name>
        <url-pattern>/productionplan/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/productionplan/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductionPlan</servlet-name>
        <url-pattern>/productionplan/plan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductionPlanUpdateController1</servlet-name>
        <url-pattern>/productionplan/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductionDetailPlan</servlet-name>
        <url-pattern>/productionplan/detailplan</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>25</session-timeout>
    </session-config>
</web-app>
